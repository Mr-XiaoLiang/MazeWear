<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@android:color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.lollipop.play.core.view.MazePlayView
            android:id="@+id/mazePlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.lollipop.play.core.view.MazeFogView
            android:id="@+id/mazeFogView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/joystickRingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:src="@drawable/bg_joystick_ring" />

        <com.lollipop.play.core.view.JoystickView
            android:id="@+id/joystickView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menuPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/osdBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88000000"
                android:src="@drawable/bg_play_osd_zone"
                app:tint="@android:color/darker_gray" />

            <androidx.wear.widget.CurvedTextView
                android:id="@+id/timeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="00:00" />

            <androidx.wear.widget.CurvedTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rotation="180"
                android:text="@string/hint_parse"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                app:clockwise="false" />

            <FrameLayout
                android:id="@+id/centerMenuButton"
                android:layout_width="0px"
                android:layout_height="0px"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <com.lollipop.play.core.view.MazeOverviewView
                    android:id="@+id/overviewView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/leftArrowIcon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_keyboard_double_arrow_left_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/centerMenuButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/topArrowIcon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_keyboard_double_arrow_up_24"
                app:layout_constraintBottom_toTopOf="@id/centerMenuButton"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rightArrowIcon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/centerMenuButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bottomArrowIcon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_keyboard_double_arrow_down_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/centerMenuButton"
                app:layout_constraintWidth_percent="0.12" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/osdButton"
                android:layout_width="0px"
                android:layout_height="0px"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/contentLoadingView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/victoryPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:visibility="invisible">

            <com.lollipop.play.core.view.MazeOverviewView
                android:id="@+id/settlementMapView"
                android:layout_width="0px"
                android:layout_height="0px"
                android:background="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.43"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/victoryContinueButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#188F99"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@string/button_continue"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@android:drawable/stat_sys_upload_done"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hint_victory"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@id/victoryContinueButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.wear.widget.CurvedTextView
                android:id="@+id/victoryView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:text="@string/title_victory" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>