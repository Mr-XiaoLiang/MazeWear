<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.wear.widget.CurvedTextView
            android:id="@+id/timeView"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00:00" />

        <androidx.wear.widget.CurvedTextView
            android:layout_width="0px"
            android:layout_height="0px"
            android:padding="10dp"
            android:rotation="180"
            android:text="@string/hint_parse"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:clockwise="false"
            app:layout_constraintBottom_toBottomOf="@id/timeView"
            app:layout_constraintEnd_toEndOf="@id/timeView"
            app:layout_constraintStart_toStartOf="@id/timeView"
            app:layout_constraintTop_toTopOf="@id/timeView" />

        <com.lollipop.play.core.view.MazeOverviewView
            android:id="@+id/overviewView"
            android:layout_width="0px"
            android:layout_height="0px"
            android:background="@android:color/black"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/timeView"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/timeView"
            app:layout_constraintStart_toStartOf="@id/timeView"
            app:layout_constraintTop_toTopOf="@id/timeView"
            app:layout_constraintWidth_percent="0.7" />

        <Space
            android:id="@+id/guideBounds"
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/osdBackground"
            android:layout_width="0px"
            android:layout_height="0px"
            android:background="#88000000"
            android:src="@drawable/bg_play_osd_zone"
            app:layout_constraintBottom_toBottomOf="@id/guideBounds"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideBounds"
            app:layout_constraintStart_toStartOf="@id/guideBounds"
            app:layout_constraintTop_toTopOf="@id/guideBounds"
            app:layout_constraintWidth_percent="0.6"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_operation_method"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/osdBackground"
            app:layout_constraintEnd_toEndOf="@id/guideBounds"
            app:layout_constraintStart_toStartOf="@id/guideBounds"
            app:layout_constraintTop_toTopOf="@id/guideBounds" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_keyboard_double_arrow_left_24"
            android:gravity="center"
            android:text="@string/label_action_left"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/osdBackground"
            app:layout_constraintEnd_toEndOf="@id/osdBackground"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@id/osdBackground"
            app:layout_constraintTop_toTopOf="@id/osdBackground" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_keyboard_double_arrow_up_24"
            android:gravity="center"
            android:text="@string/label_action_up"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/osdBackground"
            app:layout_constraintEnd_toEndOf="@id/osdBackground"
            app:layout_constraintStart_toStartOf="@id/osdBackground"
            app:layout_constraintTop_toTopOf="@id/osdBackground"
            app:layout_constraintVertical_bias="0.05" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_keyboard_double_arrow_right_24"
            android:gravity="center"
            android:text="@string/label_action_right"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/osdBackground"
            app:layout_constraintEnd_toEndOf="@id/osdBackground"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@id/osdBackground"
            app:layout_constraintTop_toTopOf="@id/osdBackground" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_keyboard_double_arrow_down_24"
            android:gravity="center"
            android:text="@string/label_action_down"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/osdBackground"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/osdBackground"
            app:layout_constraintStart_toStartOf="@id/osdBackground"
            app:layout_constraintTop_toTopOf="@id/osdBackground"
            app:layout_constraintVertical_bias="0.95" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_menu_24"
            android:gravity="center"
            android:text="@string/label_action_menu"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/osdBackground"
            app:layout_constraintEnd_toEndOf="@id/osdBackground"
            app:layout_constraintStart_toStartOf="@id/osdBackground"
            app:layout_constraintTop_toTopOf="@id/osdBackground" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideBounds"
            app:layout_constraintWidth_percent="0.8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitButton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/continueButton"
            app:layout_constraintWidth_percent="0.8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/restartButton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_restart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exitButton"
            app:layout_constraintWidth_percent="0.8" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintTop_toBottomOf="@id/restartButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>